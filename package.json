{
  "name": "mobx-mantle",
  "version": "0.2.1",
  "description": "A minimal library that brings MobX reactivity to React components with a familiar class-based API",
  "author": "Craig Albert <me@craigalbert.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/craigthings/mobx-mantle"
  },
  "homepage": "https://github.com/craigthings/mobx-mantle#readme",
  "bugs": {
    "url": "https://github.com/craigthings/mobx-mantle/issues"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "mobx",
    "viewmodel",
    "mvvm",
    "class-components"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "tsup",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "mobx": ">=6.0.0",
    "mobx-react-lite": ">=3.0.0",
    "react": ">=17.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "mobx": "^6.12.0",
    "mobx-react-lite": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  }
}
